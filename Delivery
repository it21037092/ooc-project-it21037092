#include <iostream>
#include <string.h>

using namespace std;

   //class declaration
class Delivery
{
  private :
    int delID;
    char delName[10];
    char delAddress[30];
    char delDate[10];

  public :
    void Deliveryd(int dID,char dName[10],char dAddress[30],char dDate[10]);
    void displayDeliveryDetails();
};

    void Delivery :: Deliveryd(int dID,char dName[10],char dAddress[30],char dDate[10]){
        delID = dID;
        strcpy(delName,dName);
        strcpy(delAddress,dAddress);
        strcpy(delDate,dDate);
    }

    void Delivery :: displayDeliveryDetails(){
        cout << delID << endl;
        cout << delName << endl;
        cout << delAddress << endl;
        cout << delDate << endl;
    }
